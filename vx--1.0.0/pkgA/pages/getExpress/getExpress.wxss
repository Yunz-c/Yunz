.container {
  background-color: #fff;
  width: 85%;
  margin: 40rpx auto;
  border-radius: 13rpx;
  box-shadow: 0 0 12rpx #a1a1a1;
  padding: 20rpx;

}
.qjm{border-radius: 13rpx;
  border: 1rpx solid #7853B2;
  padding: 20rpx 0rpx;
}

/* 大小件类型 */
.container .type {
  color: #f00;
  display: flex;
  font-size: 24rpx;
  width: 80rpx;
  height: 40rpx;
  margin: auto;
  margin-right: 10rpx;
  padding: 5rpx 5rpx;
  justify-content: center;
  border-radius: 13rpx;
  align-items: center;
  border:1rpx solid #7853B2;
}


.container .address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 20rpx auto;
  padding: 20rpx;
  border-bottom:0rpx solid #a1a1a1;
}

.container .address3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0rpx auto;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.container .address text:nth-child(2) {
  color: #a1a1a1;
  font-size: 24rpx;
  border: 1rpx solid #7853B2;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 13rpx;
  width: 200rpx;
  height: 50rpx;
}
.container-m{
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  align-items: center;
  width: 85%;
  margin:20rpx auto;
  border-bottom:1rpx solid #a1a1a1;
}
.lost{  
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a1a1a1;
  border: 1rpx solid #7853B2;
  border-radius: 13rpx;
  width: 170rpx;
  height: 35rpx;
  margin: 10rpx;
  padding-bottom: 10%;
}

.container .address input {
  text-align: right;
  padding-right: 20rpx;
  border: 0.5rpx solid #7853B2;
  border-radius: 13rpx;
  width: 75%;
  height: 50rpx;
}

/* 取件码输入框样式 */
.container .getCode {
  display: flex;
  margin: 20rpx auto;
  width: 75%;
  height: 65rpx;
  border-radius: 13rpx;
  align-items: center;
  text-align: center;
  border: 1rpx solid #7853B2;
  position: relative;
}

