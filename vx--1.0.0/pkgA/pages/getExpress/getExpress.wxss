.container .bottom_tips {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.container .bottom_tips text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.container .bottom_tips text:nth-child(1) {
  color: #a1a1a1;
  font-size: 24rpx;
}

.container .bottom_tips text:nth-child(2) {
  color: #f00;
}

.container .submit {
  width: 90%;
  background-color: #7853B2;
  color: #fff;
  border-radius: 13rpx;
  padding: 20rpx 0;
  margin-top: 70rpx;
}

.container .statement {
  color: #7853B2;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.container .statement text:nth-child(2) {
  margin-left: 20rpx;
  font-size: 24rpx;
}

