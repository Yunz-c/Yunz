.body {
  background-color: #fff;
  width: 90%;
  margin: 70rpx auto;
  border-radius: 20rpx;
  display: flex;
  bottom: 40rpx;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.body .avatar {
  display: flex;
  border-radius: 13rpx;
  width: 100%;
  height: 120rpx;
  margin: 40rpx auto;
  background-color: #fff;
}

.body .avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 13rpx;
  margin-left: 40rpx;
}

.body .tips {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 85%;
  text-align: center;
  margin-top: 25rpx;
  color: #590083;
  font-size: 24rpx;
  padding: 10rpx 0;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.body .item {
  display: flex;
  justify-content: space-between;
  width: 90%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #d1d1d1;
  align-items: center;
}

.body .item .left {
  display: flex;
  align-items: center;
}

.body .item .left image {
  width: 40rpx;
  height: 40rpx;
}

.body .item .right {
  color: #a1a1a1;

}

.body .item .left text {
  margin-left: 20rpx;
}

.body .item input {
  text-align: right;
}

.body .uploadImg {
  width: 90%;
  padding: 20rpx 0;
}

.body .uploadImg .upload {
  padding: 150rpx 300rpx;
  border: 2rpx dashed #a1a1a1;
  color: #a1a1a1;
  margin-top: 20rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
  position: relative;
}

.body .uploadImg .upload image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.mt {
  margin-top: 30rpx !important;
  margin-bottom: 20rpx !important;
}